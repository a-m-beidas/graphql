directive @auth(role: String) on FIELD_DEFINITION


schema {
    query: Query
}

type Query {
    bestSellers: [Book]
    recent: [Book]
    classic: [Book]
}

type Book {
    id: String @auth(role: "ADMIN")
    title: String @auth(role: "USER")
    genre: String
    author: Author
    link: String
    year: Int
}

type Author {
    id: String
    name: String
}