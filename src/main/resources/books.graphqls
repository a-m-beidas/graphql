directive @auth(fields: String) on FIELD_DEFINITION

input AuthField {
    key: String
    value: String
}

schema {
    query: Query
}

type Query
    {
    bestSellers: [Book] @auth(fields: "{'id': 'ADMIN', 'title': 'USER'}")
    recent: [Book]
    classic: [Book]
}

type Book
{
    id: String
    title: String
    genre: String
    author: Author
    link: String
    year: Int
}

type Author {
    id: String
    firstName: String
    lastName: String
}